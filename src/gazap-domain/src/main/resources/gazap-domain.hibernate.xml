<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <mapping class="gazap.domain.entity.Avatar"/>
        <mapping class="gazap.domain.entity.Game"/>
        <mapping class="gazap.domain.entity.Geometry"/>
        <mapping class="gazap.domain.entity.GeometryGeoid"/>
        <mapping class="gazap.domain.entity.GeometryPlain"/>
        <mapping class="gazap.domain.entity.Map"/>

        <mapping class="gazap.domain.entity.UserProfile"/>
        <mapping class="gazap.domain.entity.UserSocialLink"/>
        <mapping class="gazap.domain.entity.UserSummary"/>
        <mapping class="gazap.domain.entity.UserGameRole"/>
        <mapping class="gazap.domain.entity.UserMapRole"/>

        <event type="pre-insert">
            <listener class="gazap.domain.dao.SessionListener"/>
        </event>
        <event type="pre-update">
            <listener class="gazap.domain.dao.SessionListener"/>
        </event>
    </session-factory>
</hibernate-configuration>
