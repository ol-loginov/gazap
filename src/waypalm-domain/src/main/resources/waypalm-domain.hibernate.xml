<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <mapping class="waypalm.domain.entity.Contribution"/>
        <mapping class="waypalm.domain.entity.ContributionTile"/>

        <mapping class="waypalm.domain.entity.Avatar"/>
        <mapping class="waypalm.domain.entity.World"/>
        <mapping class="waypalm.domain.entity.WorldActor"/>
        <mapping class="waypalm.domain.entity.Surface"/>
        <mapping class="waypalm.domain.entity.SurfaceActor"/>
        <mapping class="waypalm.domain.entity.Geometry"/>

        <mapping class="waypalm.domain.entity.GeometryGeoid"/>

        <mapping class="waypalm.domain.entity.GeometryPlain"/>
        <mapping class="waypalm.domain.entity.GeometryPlainTile"/>

        <mapping class="waypalm.domain.entity.UserProfile"/>
        <mapping class="waypalm.domain.entity.UserSocialLink"/>
        <mapping class="waypalm.domain.entity.UserSummary"/>

        <event type="pre-insert">
            <listener class="waypalm.domain.dao.SessionListener"/>
        </event>
        <event type="pre-update">
            <listener class="waypalm.domain.dao.SessionListener"/>
        </event>
    </session-factory>
</hibernate-configuration>
