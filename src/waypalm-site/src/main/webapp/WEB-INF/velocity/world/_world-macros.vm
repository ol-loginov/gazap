#macro(worldPageSidebar $activeTab)
#* @vtlvariable name="world" type="waypalm.domain.entity.World" *#
<div id="brandLogo">
    <a href="$cp/" title=""></a>
</div>
<div id="bodyMenu">
    <div class="mini-tabs">
        #worldPageMiniTabs()
        <div class="mini-tab-container">
            <div id="landingSidebarCommon" data-tab="landingSidebarCommon"
                 #if($activeTab=='landingSidebarCommon')class="active-tab"#end>
                #landingSidebarCommonContent()
            </div>
            <div id="landingSidebarHelp" data-tab="landingSidebarHelp"
                 #if($activeTab=='landingSidebarHelp')class="active-tab"#end>
            </div>
            <div id="landingSidebarWorld" data-tab="landingSidebarWorld"
                 #if($activeTab=='landingSidebarWorld')class="active-tab"#end>
                #if($eCan.controlWorld($world))
                    <div class="section">
                        <h1 class="section-head">#springMessage('WorldPage.sidebar.controlSection.title')</h1>
                        <ul class="option-selector">
                            <li #if($eCdn.appZone.equals('/w/manage/details'))class="current"#end>
                                <a href="$cp/manage/w/$world.slug/details">#springMessage('WorldPage.sidebar.controlSection.details')</a>
                            </li>
                            <li #if($eCdn.appZone.equals('/w/manage/publishing'))class="current"#end>
                                <a href="$cp/manage/w/$world.slug/publishing">#springMessage('WorldPage.sidebar.controlSection.publishing')</a>
                            </li>
                            <li #if($eCdn.appZone.equals('/w/manage/surfaces'))class="current"#end>
                                <a href="$cp/manage/w/$world.slug/surfaces">#springMessage('WorldPage.sidebar.controlSection.surfaces')</a>
                            </li>
                            #if($eCdn.appZone.startsWith('/w/manage/'))
                                <li>
                                    <a href="$cp/w/$world.slug">#springMessage('WorldPage.sidebar.controlSection.worldPage')</a>
                                </li>
                            #end
                        </ul>
                    </div>
                #end
                #if(!$world.surfaces.empty)
                    <div class="section">
                        <h1 class="section-head">#springMessage('WorldPage.sidebar.surfaceSection.title')</h1>
                        <ul class="option-selector">
                            #foreach($surface in $world.surfaces)
                                <li>$escTool.html($surface.title)</li>
                            #end
                        </ul>
                    </div>
                #end
            </div>
        </div>
    </div>
</div>
#end

#macro(worldPageMiniTabs)
<div class="mini-tab-navigator">
    <div class="grid-3">
        <div class="content">
            <div class="cell-1">
                <a href="#" data-tab="landingSidebarCommon">
                    #springMessage('brandMenu.menu')
                </a>
            </div>
            <div class="cell-1">
                <a href="#" data-tab="landingSidebarHelp">
                    #springMessage('brandMenu.help')
                </a>
            </div>
            <div class="cell-1">
                <a href="#" data-tab="landingSidebarWorld">
                    #springMessage('brandMenu.world')
                </a>
            </div>
        </div>
    </div>
</div>
#end
