#set($au=$eCdn.server)
#set($cp=$eCdn.contextPath)
#set($m=$eVisitor)
<section id="accountBar" class="logged-$m.logged">
    #if($m.logged)
        <div class="account-name">
            <a class="username" href="${cp}${m.user.route}">
                <img src-async="http://www.gravatar.com/avatar/${m.user.gravatar}?s=16" alt="" width="16" height="16"/>
            <span>
                $!m.user.name
            </span>
            </a>
        </div>
        <div class="account-menu">
            <div class="opener">
                <a class="toggler pull-right" href="#">
                    <i class="glyphicon-resize-small glyphicon-white collapse"></i>
                    <i class="glyphicon-resize-full glyphicon-white expand"></i>
                </a>
            </div>
            <ul class="unstyled menu-column">
                <li>
                    <a href="${cp}/settings">
                        <i class="glyphicon-cog"></i>
                        #springMessage('accountBar.accountMenu.settings')
                    </a>
                </li>
            </ul>
            <ul class="unstyled menu-column">
                <li>
                    <a href="${cp}/auth/logout">
                        <i class="glyphicon-plane"></i>
                        #springMessage('accountBar.accountMenu.logout')
                    </a>
                </li>
            </ul>
            <div class="clear"></div>
        </div>
        <script type="text/javascript">
            head('jquery', function () {
                $('#accountBar .account-menu > .opener .toggler').click(function () {
                    $('#accountBar .account-menu').toggleClass('expanded');
                    return false;
                });
            })
        </script>
    #else
        <span class="actions">
            #springMessage1('accountBar.anonymous.actions', $cp)
        </span>
    #end
</section>