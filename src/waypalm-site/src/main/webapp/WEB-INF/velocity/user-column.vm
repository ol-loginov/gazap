#* @vtlvariable name="favouriteWorlds" type="java.util.List<waypalm.domain.entity.World>" *#
#if($eVisitor.logged)
<div id="userColumn">
    #parse('user/_account-widget.vm')
    <hr/>
    <div class="widget">
        <div class="head">
            <ul class="quick-actions">
                <li>
                    <a href="$eCdn.contextPath/my/worlds">миры</a>
                </li>
                <li>
                    <a href="$eCdn.contextPath/my/avatars">аватары</a>
                </li>
            </ul>
            <h3>Избранное</h3>
            <ul>
                #foreach($world in $favouriteWorlds)
                    <li>
                        <a href="$cp/w/$world.slug">$escTool.html($world.title)</a>
                    </li>
                #end
            </ul>
        </div>
    </div>
</div>
#else
<div>
    <form method="post" action="$eCdn.contextPath/auth">
        <div class="formRow">
            <input type="email" name="j_username" placeholder="#springMessage('LoginForm.email.placeholder')"/>
        </div>
        <div class="formRow">
            <input type="password" name="j_password" placeholder="#springMessage('LoginForm.password.placeholder')"/>
        </div>
        <div class="formRow">
            <input type="submit" value="#springMessage('Account.logIn')"/>
        </div>
    </form>
</div>
#end
