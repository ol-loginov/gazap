<!DOCTYPE html>
<html>
    $eCdn.setAppZone('/auth')
<head>
    #parse('_html-head.vm')
    <title>#springMessage('layout.title.landingPage')</title>
</head>
<body class="login-page">
    #parse('_layout-basic-header.vm')
<div class="container">
    <div class="row-fluid">
        <div class="span6 ">
            <div class="auth-column">
                <h2 class="form-signin-heading">#springMessage('page.Login.form.header')</h2>

                <form>
                    <input class="input-block-level" type="email" name="j_username" placeholder="#springMessage('page.Login.form.email.placeholder')">
                    <input class="input-block-level" type="password" name="j_password" placeholder="#springMessage('page.Login.form.password.placeholder')">
                    <button class="btn btn-primary" type="submit">#springMessage('page.Login.form.submit')</button>
                </form>
            </div>
        </div>
        <div class="span6 auth-column">
            as
        </div>
    </div>
</div>
<!-- /container -->
</body>
</html>