<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="$cp/">#springMessage('layout.navbar.brand')</a>

            <div class="nav-collapse collapse">
                <ul class="nav">
                    #if($siteNavbarMode == 'tools')
                        <li><a href="$cp/" class="switch-navbar-mode">#springMessage('layout.navbar.tools.leave')</a></li>
                        <li #if($siteRoute=="/tools/surface")class="active"#end><a href="$cp/tools/surface"><span>#springMessage('layout.navbar.tools.surfaces')</span></a></li>
                    #else
                        #if($eVisitor.logged)
                            <li><a href="$cp/tools" class="switch-navbar-mode">#springMessage('layout.navbar.tools')</a></li>
                        #end
                        <li #if($siteRoute=="/browse")class="active"#end><a href="$cp/browse">#springMessage('layout.navbar.browse')</a></li>
                    #end
                </ul>
                #if($eVisitor.logged)
                    <ul class="nav pull-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img class="gravatar s24" src="//gravatar.com/avatar/$eVisitor.user.gravatar?s=24"/>
                                $!escTool.html($eVisitor.user.name)
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="divider"></li>
                                <li>
                                    <a href="$cp/auth/logout">#springMessage('layout.navbar.logout')</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                #else
                    <ul class="nav pull-right">
                        <li>
                            <a href="$cp/auth">#springMessage('layout.navbar.login')</a>
                        </li>
                    </ul>
                #end
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>
